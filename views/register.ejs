<!DOCTYPE html>
<html>

<head>
	<title>Smart BCE Hackathon</title>
	<meta name="Developer" content="Kumar Saurabh Raj">
	<link rel="stylesheet" type="text/css" href="/resources/bootstrap/css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="/css/styles.css">
	<link rel="stylesheet" type="text/css" href="/css/register.css">
	<link href="https://fonts.googleapis.com/css?family=Raleway:300&display=swap" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="/resources/fontAwesome/all.min.css">
</head>

<body>

    <script src="/resources/jQuery.js"></script>
    <script type="text/javascript" src="/js/register.js"></script>

    <script type="text/javascript"> var navInactive = true; </script>

    <% include partials/navbar %>

    <script type="text/javascript">
        document.querySelector("nav").classList.add("navbar-fixed-top");
        $("nav").addClass("navbar-fixed-top");

    </script>

	<div id="overlay"></div>


    <div class="container-fluid" style="padding: 10vh 3vh">
        <div class="container">
            <h1>Register</h1>
            <hr>
            <p class="information">All fields are necesseary to be filled.</p>
            <form class="form-horizontal" action="/sbh/register" method="POST">

                <div class="form-group">
                    <label class="labels control-label col-sm-4" for="teamName">Team Name:</label>
                    <div class="col-sm-8 Disp">    <input required type="name" class="form-control" id="teamName" maxlength="20" name="teamName" placeholder="Team Name - max 20 chracters">    </div>
                </div>

                <div class="form-group">
                    <label class="labels control-label col-sm-4" for="collegeName">College Name:</label>
                    <div class="col-sm-8 Disp">    <input required type="name" class="form-control" id="collegeName" maxlength="50" name="collegeName" placeholder="College Name - max 50 chracters">    </div>
                </div>

                <div class="form-group">
                    <label class="labels control-label col-sm-4" for="collegeId">College ID:</label>
                    <div class="col-sm-8 Disp">    <input required type="name" class="form-control" id="collegeId" maxlength="20" name="collegeId" placeholder="AICTE ID - max 20 chracters">    </div>
                </div>

                <div class="form-group">
                    <label class="labels control-label col-sm-4" for="teamLeader">Team Leader:</label>
                    <div class="col-sm-8 Disp">    <input required type="name" class="form-control" id="teamLeader" maxlength="30" name="teamLeader" placeholder="Leader Name - max 30 chracters">   </div>
                </div>

                <div class="form-group">
                    <label class="labels control-label col-sm-4" for="teamMember1">Member 1:</label>
                    <div class="col-sm-8">    <input required type="name" class="form-control" id="teamMember1" maxlength="30" name="teamMember1" placeholder="Member Name - max 30 chracters">   </div>
                </div>
                
                <div class="form-group">
                    <label class="labels control-label col-sm-4" for="teamMember2">Member 2:</label>
                    <div class="col-sm-8">    <input required type="name" class="form-control" id="teamMember2" maxlength="30" name="teamMember2" placeholder="Member Name - max 30 chracters">   </div>
                </div>

                <div class="form-group">
                    <label class="labels control-label col-sm-4" for="teamMember3">Member 3:</label>
                    <div class="col-sm-8">    <input required type="name" class="form-control" id="teamMember3" maxlength="30" name="teamMember3" placeholder="Member Name - max 30 chracters">   </div>
                </div>

                <div class="form-group">
                    <label class="labels control-label col-sm-4" for="phoneNumer">Phn No:</label>
                    <div class="col-sm-8 Disp">    <input required type="name" class="form-control" id="phoneNumer" maxlength="10" name="phoneNumer" placeholder="Team Leader Phn No. - max 10 chracters">   </div>
                </div>

                <div class="form-group">
                    <label class="labels control-label col-sm-4" for="email">Email:</label>
                    <div class="col-sm-8 Disp">    <input required type="email" class="form-control" id="email" maxlength="30" name="email" placeholder="Team Leader Email - max 30 chracters">   </div>
                </div>

                <div class="form-group">
                    <label class="labels control-label col-sm-4" for="ideaTitle">Idea Title:</label>
                    <div class="col-sm-8 Disp">    <input required type="name" class="form-control" id="ideaTitle" maxlength="100" name="ideaTitle" placeholder="Idea Title - max 100 chracters">   </div>
                </div>

                <div class="form-group">
                    <label class="labels control-label col-sm-4" for="ideaLink">Idea Link:</label>
                    <div class="col-sm-8">    <input required type="name" class="form-control" id="ideaLink" maxlength="100" name="ideaLink" placeholder="Enter Google Docs Link - max 100 chracters">   </div>
                </div>

                <div class="form-group">
                    <label class="labels control-label col-sm-4" for="abstract">Idea Abstract:</label>
                    <div class="col-sm-8">    <textarea required type="textArea" class="form-control" maxlength="1000" id="abstract" name="abstract" placeholder="Enter idea abstract"></textarea>   </div>
                    <!-- minlength="300"  update to be words instead of chracters-->
                </div>

                <div class="form-group" style="display: none;">
                    <button id="realSubmitBtn" class="btn btn-default">Submit</button>
                </div>
            </form>

            <div class="form-group" style="display: flex; justify-content: center;">
                <button id="submit" class="btn btn-default">Submit</button>
            </div>

            <div class="blackScreen blackScreenDissapper"> 
                <h1>Are You Sure?</h1>
                <hr>
                <div class="popup"> 
                    <% for(var i = 1; i <= 7; i++){ %>
                        <span class="Disp"></span>
                    <% } %>
                    <!-- <span class="teamNameDisp Disp"></span>
                    <span class="collegeNameDisp Disp"></span>
                    <span class="collegeIdDisp Disp"></span>
                    <span class="teamLeaderDisp Disp"></span>
                    <span class="phoneNumerDisp Disp"></span>
                    <span class="emailDisp Disp"></span>
                    <span class="ideaTitleDisp Disp"></span>
                    <span class="ideaLinkDisp Disp"></span> -->
                    <div class="popUpButtons">
                        <button id="no" type="submit" class="btn btn-default">No, Edit</button>
                        <button id="yes" type="submit" class="btn btn-default">Yes, Submit</button>
                    </div>
                </div>
            </div>

        </div>
    </div>

<% include partials/footer %>